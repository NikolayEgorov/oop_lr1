@using labrob1.Models
@model IEnumerable<User>

@{
    Layout= "_Layout";
}

@{
    <div class="row mt-5" style="margin: 15px;">
        <h2>Користувачі</h2>

        <div class="col-12">
            <div class="row">
                <div class="col-md-4" style="padding: 15px;">
                    <a class="btn btn-primary" href="/users/add" role="button">Новий</a>
                </div>
                <div class="col-md-4">
                    <form action="/users/clear" method="post">
                        <button class="btn btn-danger" style="display: inline" type="submit">Очистити</button>
                    </form>
                </div>
            </div>

            <table class="table mt-5">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ім'я</th>
                        <th>Прізвище</th>
                        <th>Досвід програмування</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var user in Model) {
                        <tr>
                            <td>@user.id.ToString()</td>
                            <td>@user.name</td>
                            <td>@user.surname</td>
                            <td>@user.skillage.ToString() років</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}